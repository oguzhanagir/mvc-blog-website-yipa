@model IEnumerable<EntityLayer.Concrete.SocialMedia>
@{
    ViewBag.Title = "SocialMediaList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <a href="~/Admin/AddNewSocialMedia" class="btn btn-group btn-rounded btn-dark mb-5">Yeni Sosyal Medya Ekle</a>
                        <h4>Sosyal Medya Listesi</h4>
                    </div>
                    <div class="table-responsive">

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>İkon Yolu</th>
                                    <th>Adı</th>
                                    <th>Link</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.SocialMediaID</th>
                                        <td>@item.IconPath</td>
                                        <td>@item.Name</td>
                                        <td>@item.Address</td>
                                        <td>5</td>
                                        <td><a href="/Admin/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-rounded btn-danger ">Sil</a></td>
                                        <td><a href="/Admin/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-rounded btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
