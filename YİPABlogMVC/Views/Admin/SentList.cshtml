@model IEnumerable<EntityLayer.Concrete.Sent>
@{
    ViewBag.Title = "SentList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                
                <div class="card-body">
                    <div class="email-left-box">

                        <a href="/Admin/SendMessage" class="btn btn-primary btn-block">Mail Gönder</a>
                        <div class="mail-list mt-4">
                            <a href="/Admin/ContactList" class="list-group-item border-0  p-r-0"><i class="fa fa-inbox font-18 align-middle mr-2"></i> <b>Gelen Kutusu</b> </a>
                            <a href="/Admin/SentList" class="list-group-item border-0 text-primary p-r-0"><i class="fa fa-paper-plane font-18 align-middle mr-2"></i>Gönderilenler</a>
                        </div>

                    </div>
                    <div class="email-right-box">
                        <p style="font-size:18px; color:darkblue; font-weight:700">Gönderilenler</p>

                        <div class="email-list m-t-15">
                            @foreach (var item in Model)
                            {
                                <div class="message">
                                   
                                   <a href="/Admin/ReadSent/@item.SentID">
                                        <div class="col-mail col-mail-2">
                                            <div class="subject">@item.Subject</div>
                                            <div class="date">11:49 am</div>
                                        </div>

                                    </a>
                       
                                </div>
                            }
                        </div>
                        <!-- panel -->
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
