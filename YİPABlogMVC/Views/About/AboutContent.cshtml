@model IEnumerable<EntityLayer.Concrete.About>

<!-- About Content Start -->
<div class="main-about">
    <div class="container" style="padding:50px;">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-12 col-lg-6">

                    <div class="main-about-content" style="padding:30px;">
                        <h3 class="main-about-content-subTitle">@item.TitleAbout</h3>
                        <p class="main-about-content-p mt-5">
                            @item.ContentAbout
                        </p>

                    </div>
                    
                </div>
                <div class="col-sm-12 col-lg-6">
                    <img src="@item.ImagePathAbout" style="width:500px; height:500px; margin-left:100px;" alt="Ana Sayfa Hakkımda Resim">
                </div>
                }
            </div>
    </div>
</div>
<!-- About Content End -->