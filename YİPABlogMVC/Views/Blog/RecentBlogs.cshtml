@model IEnumerable<EntityLayer.Concrete.Blog>
<div class="container" style="margin-top:160px;">
    <div class="main-content p-5">
        <div class="row">
            <div class="col-lg-9 col-sm-12 blog-section mb-3 ">
                <div class="container">

                    <div class="recent-blogs-title mb-5">
                        <h3>Son Bloglar</h3>
                        <hr size="7" class="line mt-3 w-auto">
                    </div>

                    <div class="recent-blogs-content">
                        <div class="container">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col-lg-4 col-sm-12 blog-img mb-5">
                                        <img src="~/yipa-frontend/assets/images/featureimg2.png" style="width:220px; height:150px;" />
                                    </div>
                                    <div class="col-lg-8 col-sm-12 blog-content">
                                        <span style="font-size:14px; ">@item.Author.Name</span>
                                        <h4>@item.Title</h4>
                                        <p class="mt-3">
                                            @Html.Raw(item.Content)
                                        </p>
                                        <a class="btn mt-3 text-white" style="background-color: #43808C;"> Daha Fazla </a>
                                    </div>

                                }



                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <aside class="col-lg-3 col-sm-12blog-sidebar">
                <h3>sidebar</h3>
            </aside>
        </div>
    </div>
</div>
