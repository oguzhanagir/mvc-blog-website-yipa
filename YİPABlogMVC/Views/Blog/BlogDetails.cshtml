@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "BlogDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{
    <div class="container p-5 w-75">
        <div class="row">
            <div class="col-12">
                <img src="@item.ImagePath" class="mt-5 justify-content-center" />
                <h3 class="mt-5 mb-5">@item.Title</h3>
                <p>@Html.Raw(item.Content)</p>
            </div>
        </div>
    </div>
}


@Html.Action("AddMail","Newsletter")
@Html.Action("Footer","Home")



