@model IEnumerable<EntityLayer.Concrete.Category>



<div class="container">
    <div class="row">
        <h3>Kategoriler</h3>
        @foreach (var item in Model)
        {
            <div class="col-12 mt-3">
                <a href="/Blog/Index/@item.CategoryID" style="
                        display: block;
                        width:120px;
                        float: left;
                        text-transform: uppercase;
                        padding: 14px;
                        font-size: .75rem !important;
                        border-radius:24px;
                        background: #00788A;
                        color: #fff;
                        font-family: 'Poppins', sans-serif;
                           " class="text-center">
                        
                    @item.Name
                </a>


            </div>
        }
    </div>
</div>

